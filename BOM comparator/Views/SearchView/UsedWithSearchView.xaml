<UserControl x:Class="BOMComparator.Views.UsedWithSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="PartNumber" TextAlignment="Center" VerticalContentAlignment="Center" Grid.Row="0" Margin="3"></TextBox>

        <ContentControl Grid.Row="1" VerticalContentAlignment="Center" x:Name="Filter" Margin="0 10 0 10" />

        <Button x:Name="ExecuteSearch" Content="SEARCH" Margin="3"
            HorizontalAlignment = "Stretch" VerticalAlignment = "Stretch" 
            Grid.Row="2" IsDefault="True"/>
    </Grid>

</UserControl>
